<div class="main_visual">
  <%= image_tag 'main_visual2.jpg', alt: 'Image', width: '100%', height: '100%' %>
  <div class="text-overlay">
    <p>
      チョコレートの奥深さを探し<br>
    新たなお気に入りを見つけよう
    </p>
  </div>
</div>

<div class="container mt-5">
  <div class="d-flex justify-content-center">
      <h4>New Review</h4>
  </div>
  <div class="row">
    <% @reviews.each do |review| %>
      <div class="col-12 col-md-3 mb-4 mx-auto">
        <div>
          <%= link_to (admin_signed_in? ? admin_review_path(review.id) : review_path(review.id)) do %>
            <%= image_tag review.get_image(200, 200) %>
          <% end %><br>
          <%= review.product.name %><br>
          <%= render "user/reviews/static_rate", review: review %><br>
          <%= image_tag review.user.get_profile_image(50,50) %>
          <%= truncate(review.body, length: 23) %>
        </div>
      </div>
    <% end %>
  </div>
</div>