  <div class="row">
    <div class="col">
        <%= form_with model: [@review, @review_comment], local: false do |f| %>
          <%= render "layouts/errors", obj: @review, review_comment: @review_comment %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメント(最大200文字)", class: "w-100" %>
          <%= f.submit "送信する" , class: "btn btn-success" %>
        <% end %>
    </div>
  </div>