<% @review.review_comments.each do |review_comment| %>
  <div class="row">
    <div class="col-md-2">
      <div class="d-flex flex-column align-items-center">
        <%= link_to user_path(review_comment.user.id) do %>
          <%= image_tag review_comment.user.get_profile_image(100, 100) %><br>
          <span class="text-truncate"><%= review_comment.user.name %></span>
        <% end %>
      </div>
    </div>
    <div class="col-md-10">
      <div>
        <%= review_comment.created_at.strftime('%Y/%m/%d') %>
      </div>
      <div>
        <span class="text-truncate"><%= review_comment.comment %></span>
          <!-- レビューコメントの削除 -->
        <% if review_comment.user == current_user %>
          <%= link_to "削除", review_review_comment_path(@review, review_comment), method: :delete, remote:true, data: {"turbolinks" => false}, class: "btn btn-sm btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>