<div class="container">
  <div class="row">
    <div class='col-12'>
      <h4><%= @user.name %> さんのブックマーク一覧</h4>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>商品名</th>
            <th>レビュー</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @bookmark_reviews.each do |bookmark| %>
            <tr>
              <td><%= image_tag bookmark.review.get_image(150, 150) %></td>
              <td><%= bookmark.review.product.name %></td>
              <td><%= render "user/reviews/static_rate", review: bookmark.review %></td>
              <td id="bookmark_btn_<%= bookmark.review.id %>">
                  <%= render "user/reviews/bookmark", review: bookmark.review %>
              </td>
              <td>
               <%= link_to ">> Read more", review_path(bookmark.review.id) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="row mx-auto">
       <%= link_to "マイページに戻る", user_path(@user), class: "btn btn-outline-secondary btn-block" %>
    </div>
  </div>
</div>
