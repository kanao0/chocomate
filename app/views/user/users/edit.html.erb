<div class="container px-5 px-sm-0">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="border p-4">
        <h4 class="text-center">マイページ管理</h4>
        <div class="row d-flex justify-content-center">
          <%= render "layouts/errors", obj: @user %>
        </div>

        <%= form_with model: @user do |f| %>
          <div class="form-group">
            <label for="user_name">ユーザーネーム</label>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group">
            <label for="user_profile_image">プロフィール画像</label><br>
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>

          <div class="form-group">
            <label for="user_bio">自己紹介</label>
            <%= f.text_area :bio, placeholder: "自己紹介文を入力", class: "form-control", rows: 5 %>
          </div>

          <div class="form-group">
            <label for="user_email">メールアドレス</label>
            <%= f.text_field :email, size: "45", placeholder: "メールアドレスを入力(choco＠chocomate.com)", autocomplete: "email", style: "height: 35px;", class: "form-control" %>
          </div>

          <div class="form-group text-center">
            <%= f.submit "登録情報を変更する", class: "btn btn-primary" %>
          </div>
        <% end %>
        <div class="text-center mt-3">
          退会手続きをする <%= link_to "こちらから", users_quit_path, class:"btn btn-danger mx-2" %>
        </div>
      </div>
    </div>
  </div>
</div>