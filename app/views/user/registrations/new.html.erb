<div class="container text-center">
  <div class="card m-4 p-4" style="border-width: 8px; border-style: solid; border-color: #bd948b;">
    <h4 class="mb-4">新規会員登録</h4>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "user/shared/error_messages", resource: resource %>

      <div class="row justify-content-center">
        <div class="col-md-6 text-left">
          <%= f.label :name, "ユーザー名", class: "form-label" %>
        </div>
      </div>
      <div class="row justify-content-center mb-3">
        <div class="col-md-6">
          <%= f.text_field :name, class: "form-control", placeholder: "ユーザーネームを入力", autofocus: true %>
        </div>
      </div>

      <div class="row justify-content-center">
        <div class="col-md-6 text-left">
          <%= f.label :email, "メールアドレス", class: "form-label" %>
        </div>
      </div>
      <div class="row justify-content-center mb-3">
        <div class="col-md-6">
          <%= f.email_field :email, class: "form-control", placeholder: "メールアドレスを入力(choco＠chocomate.com)", autocomplete: "email"  %>
        </div>
      </div>

      <div class="row justify-content-center">
        <div class="col-md-6 text-left">
          <%= f.label :password, "パスワード", class: "form-label"%>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
        </div>
      </div>
      <div class="row justify-content-center mb-3">
        <div class="col-md-6">
          <%= f.password_field :password, class: "form-control", placeholder: "パスワードをを入力(半角英字)", autocomplete: "new-password" %>
        </div>
      </div>

      <div class="row justify-content-center">
        <div class="col-md-6 text-left">
          <%= f.label :password_confirmation, "パスワード(確認用)", class: "form-label" %>
        </div>
      </div>
      <div class="row justify-content-center mb-4">
        <div class="col-md-6">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワードをを入力(半角英字)", autocomplete: "new-password" %>
        </div>
      </div>

      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.submit "会員登録する", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>

    <p class="mb-0">会員登録がお済みの方<%= render "user/shared/links" %>からログイン</p>
  </div>
</div>