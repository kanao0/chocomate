<!--レビューしたユーザーがログインしたユーザーじゃなかったら-->
<% if current_user != @review.user %>
  <% if @review.find_bookmark(current_user).blank? %>
  <!-- ブックマーク登録 -->
    <%= link_to review_bookmarks_path(@review), method: :post, remote: true do %>
      <i class="fa-regular fa-bookmark" style="font-size: 80px; color: #6a2f36;"></i>
    <% end %>
  <% else %>
  <!-- ブックマーク解除 -->
    <%= link_to review_bookmark_path(@review, @review.find_bookmark(current_user)), method: :delete, remote: true do %>
      <i class="fas fa-bookmark" style="font-size: 80px; color: #6a2f36;"></i>
    <% end %>
  <% end %>
<% end %>