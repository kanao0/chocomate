<div class="container">
  <div class="row d-flex justify-content-center">
    <h5 class="border p-3 my-3">
      <%= @user.name %>さんの会員詳細
    </h5>
  </div>
  <div class="row d-flex justify-content-center">
    <div>
      <table class="table table-borderless">
        <tr>
          <td class="bd-light">会員ID</td>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <td class="bd-light">ユーザーネーム</td>
          <td><%= @user.name %></td>
        </tr>

        <tr>
          <td class="bd-light">メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>

        <tr>
          <td class="bd-light">会員ステータス</td>
          <td>
            <% if @user.is_active %>
              <p class="text-success"><strong>有効</strong></p>
            <% else %>
              <p class="text-secondary"><strong>退会</strong></p>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="d-flex justify-content-center p-3 my-3">
    <%= link_to "編集する", edit_admin_user_path, class:"btn btn-success ml-3" %>
    <%= link_to "会員一覧に戻る", admin_users_path, class:"btn btn-primary ml-3" %>
  </div>

</div>
