<div class="container">
  <div class="row d-flex justify-content-center">
    <h5 class="border p-3 my-3">
      ブランド編集
    </h5>
  </div>
  <br>
  <div class="row d-flex justify-content-center">
    <%= render "layouts/errors", obj: @brand %>
  </div>

  <div class="row d-flex justify-content-center my-3">
    <%= form_with model: @brand, url: admin_brand_path(@brand), method: :patch do |f| %>
      <div class="row d-flex justify-content-center">
        <div class="mr-3">
          <%= f.label :name, "ブランド名", class: "mr-3" %>
        </div>
        <div class="mr-5">
          <%= f.text_field :name, class: "rounded" %>
        </div>
        <div>
          <%= f.submit "変更", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>