<div class="container">
  <div class="row">
    <div class="col d-flex justify-content-between">
      <h4 class="mr-3">レビュー詳細</h4>
      <!-- ブックマーク（ログインしてなかったら非表示） -->
      <% if user_signed_in? %>
        <div id="bookmark_btn_<%= @review.id %>">
          <%= render "bookmark", review: @review %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <div class="mb-3"> <%= image_tag @review.get_image(250, 250) %></div>
          <!--レビューしたユーザーのプロフィールイメージ-->
      <%=link_to user_path(@review.user.id) do  %>
        <div><%= image_tag @review.user.get_profile_image(150,150) %></div>
        <div><%= @review.user.name %></div>
      <% end %>
      </div>
    </div>
  <div class="row">
    <div class="col-md-11 offset-md-1">
      <h5><%= @review.product.name %></h5>
          <!--投稿日-->
      <h6><%= @review.created_at.strftime('%Y/%m/%d') %></h6>
          <!--星評価-->
      <div>
          <%= render "user/reviews/static_rate", review: @review %>
      </div>
      
      <ul>
        <li>ブランド：
          <%= @review.product.brand.name %>
        </li>
        <li>価格：
          <%= @review.product.price %>円（店舗により異なります）
        </li>
        <li>種類：
          <%= @review.product.type.name %>
        </li>
        <li>産地：
          <%= @review.product.origin.name %>
        </li>
        <li>タグ：
          <% @review_tags.each do |tag| %>
          <i class="fa-sharp fa-solid fa-tag"></i>
            <%= link_to tag.name, reviews_path(tag_name: tag.name) %>
          <% end %>
        </li>
      </ul>
      
      <h6>レビュー本文</h6>
      <div><%= @review.body %></div>
      <%= link_to "レビューを削除", admin_review_path(@review), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
    </div>
  </div>
</div>


<div class="container">
  <!-- コメント関係 -->
  <div class="card"> <!-- 枠で囲む部分 -->
    <div class="card-body">
      <!-- コメント件数 -->
      <p>コメント件数：<span id="comment_count"><%= @review.review_comments.count %></span></p>
      <div id="review-comments">
        <!--コメント一覧-->
        <%= render "admin/review_comments/index", review: @review %>
      </div>
    </div>
  </div>
</div>