<div class="container">
  <div class="row d-flex justify-content-center">
    <h5 class="border p-3 my-3">
      種類編集
    </h5>
  </div>
  <br>
  <div class="row d-flex justify-content-center">
    <%= render "layouts/errors", obj: @type %>
  </div>

  <div class="row d-flex justify-content-center my-3">
    <%= form_with model: @type, url: admin_type_path(@type), method: :patch do |f| %>
      <div class="row d-flex justify-content-center">
        <div class="mr-3">
          <%= f.label :name, "種類", class: "mr-3" %>
        </div>
        <div class="mr-5">
          <%= f.text_field :name, class: "rounded" %>
        </div>
        <div>
          <%= f.submit "変更", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
